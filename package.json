{
  "name": "client-finder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy": "./scripts/deploy.sh production",
    "deploy:staging": "./scripts/deploy.sh staging",
    "backup": "./scripts/backup.sh",
    "setup:server": "sudo ./scripts/setup-server.sh",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop client-finder",
    "pm2:restart": "pm2 restart client-finder",
    "pm2:logs": "pm2 logs client-finder",
    "pm2:monitor": "pm2 monit",
    "docker:build": "docker build -t client-finder .",
    "docker:run": "docker run -p 3000:3000 client-finder",
    "health-check": "curl -f http://localhost:3000/api/health"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.1",
    "cheerio": "^1.1.2",
    "lucide-react": "^0.544.0",
    "next": "14.2.18",
    "prisma": "^6.16.1",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^3.2.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.18",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
