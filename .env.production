# Production Environment Configuration
# Domain: clientfinder.invenex.in

# Google Places API Configuration
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Database Configuration (PostgreSQL)
# Example for Supabase: postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# Example for Neon: postgresql://[user]:[password]@[endpoint]/[database]?sslmode=require
DATABASE_URL=postgresql://username:password@localhost:5432/client_finder_prod

# Application Configuration
NEXT_PUBLIC_APP_URL=https://clientfinder.invenex.in
NODE_ENV=production

# Authentication
NEXTAUTH_URL=https://clientfinder.invenex.in
NEXTAUTH_SECRET=generate_a_secure_random_string_here_use_openssl_rand_base64_32

# Email Service (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# External APIs (optional - for enhanced features)
CLEARBIT_API_KEY=your_clearbit_api_key
HUNTER_API_KEY=your_hunter_api_key

# Security
CORS_ORIGIN=https://clientfinder.invenex.in

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here